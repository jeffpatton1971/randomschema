{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/site/main/navigation.json#",
  "title": "Navigation",
  "definitions": {
    "positiveIntOrNull": {
      "id": "#positiveIntOrNull",
      "type": ["null", "integer"],
      "minimum": 1
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": [ "level", "parent_id", "color", "pages" ],
  "properties": {
    "level":     { "$ref": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/site/main/defs.json#positiveInteger" },
    "parent_id": { "$ref": "#positiveIntOrNull" },
    "visitors":  { "enum": [ "all", "subscribers", "age18" ] },
    "color":     { "$ref": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/site/main/defs.json#color" },
    "pages":     {
      "type": "array",
      "items": { "$ref": "page.json#" }
    }
  }
}
