{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/site/main/page.json#",
  "title": "Page",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "page_id",
    "short_name",
    "display_name",
    "path"
  ],
  "properties": {
    "page_id": {
      "$ref": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/main/site/defs.json#positiveInteger"
    },
    "short_name": {
      "type": "string",
      "pattern": "^[a-z_]+$"
    },
    "display_name": {
      "type": "string",
      "minLength": 1
    },
    "path": {
      "type": "string",
      "pattern": "^(?:/[a-z_\\-]+)+$"
    },
    "color": {
      "$ref": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/main/site/defs.json#color"
    },
    "navigation": {
      "$ref": "https://raw.githubusercontent.com/jeffpatton1971/randomschema/main/site/navigation.json#"
    }
  },
  "switch": [
    {
      "if": {
        "required": [
          "navigation"
        ]
      },
      "then": {
        "properties": {
          "page_id": {
            "constant": {
              "$data": "1/navigation/parent_id"
            }
          }
        }
      }
    }
  ]
}
